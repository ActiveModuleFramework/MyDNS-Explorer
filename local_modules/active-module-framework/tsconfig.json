{
    "compilerOptions": {
    	"target": "es2017",
    	"module": "commonjs",
		"rootDir": "./src/",
		"outDir":"./dist/",
    	"declaration": true,
    	"sourceMap": true,
    	"noUnusedLocals": true,
    	"noUnusedParameters": true,
    	"noImplicitReturns": true,
    	"noFallthroughCasesInSwitch": true,
    	"experimentalDecorators": true,
    	"forceConsistentCasingInFileNames": true
    }
}
